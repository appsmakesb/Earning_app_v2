<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="ProgressBarTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>
    <style name="TextInputLayoutTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button.Small" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_with_ripple_effect</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.Button.Secondary">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:background">@drawable/shape_with_ripple_effect</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>
    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="background">?android:attr/colorBackground</item>
        <item name="elevation">@dimen/top_sheet_modal_elevation</item>
        <item name="behavior_peekHeight">@dimen/top_sheet_modal_peek_height</item>
        <item name="behavior_hideable">true</item>
    </style>

    <!--styles for education app-->
    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>

</resources>